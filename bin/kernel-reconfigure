#!/bin/bash

if [ "$EUID" != 0 ]; then
	exec sudo "$0" "$@"
	exit $?
fi

for path in /usr/lib/modules/*; do
	version="${path##*/}"
	read -r kernel < "${path}/pkgbase" || continue
	vmlinuz="${path}/vmlinuz"

	echo ":: Reconfiguring $kernel $version"

	kernel-install add "${version}" "${vmlinuz}"
done
